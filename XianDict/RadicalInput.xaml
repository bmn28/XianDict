<Page x:Class="XianDict.RadicalInput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:XianDict"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="RadicalInput">

    <DockPanel>
        <Grid>
            <FlowDocumentScrollViewer x:Name="fdViewer" IsToolBarVisible="True" />
            <Button x:Name="returnButton" Content="？" FontFamily="Microsoft JhengHei" FontWeight="Bold" FontSize="14" Margin="0,0,0,0" HorizontalAlignment="Left" Width="25" Click="returnButton_Click" Height="25" VerticalAlignment="Bottom"/>
            <Button x:Name="deleteButton" Content="Õ" FontFamily="Wingdings" FontSize="14" Margin="33,0,0,0" Padding="-1,1,0,0" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="25" Click="deleteButton_Click"></Button>
        </Grid>
        <WrapPanel DockPanel.Dock="Bottom"></WrapPanel>
    </DockPanel>
</Page>
