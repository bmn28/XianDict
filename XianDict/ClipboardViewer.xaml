<Page x:Class="XianDict.ClipboardViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:XianDict"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ClipboardViewer">

    <DockPanel>
        <WrapPanel DockPanel.Dock="Top">

        </WrapPanel>
        <Grid>
            <FlowDocumentScrollViewer x:Name="fdViewer" Grid.Row="1" IsToolBarVisible="True" Height="Auto" MouseUp="fdViewer_MouseUp"/>
        </Grid>
    </DockPanel>
</Page>
